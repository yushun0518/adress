/* 公用样式-start */
*
  font-size 0.2rem
  box-sizing border-box
a
  text-decoration none
  &:hover
    text-decoration none
input
  border: none;
  outline: none;
  -webkit-appearance: none;
  -webkit-appearance: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
body, h1, h2, h3, h4, h5, p, dl, dd, ul, ol, form, input, textarea, th, td, select, div, p
  margin 0
  padding 0
body
  padding-bottom: env(safe-area-inset-bottom)
  -webkit-user-select none
  user-select none

@media only screen and (max-width: 750px)
  html
    font-size calc((100vw / 7.5))
@media only screen and (min-width: 750px)
  html
    font-size 100px
  /* header.head
    position relative !important */

@font-face
  font-family Snickles
  src url('../DINPro-Medium.otf')

ul
  padding-left 0
li
  list-style none
a:active, a:hover
  outline none
button
  border none
  outline none
// 宽高
/* 公用样式-end */
aspect($width, $height = $width)
  width $width
  height $height
// 背景图片
bg-image($url, $size = 100% 100%)
  background url($url)
  background-size $size
// flex布局
dis-flex($display = flex, $direction='', $wrap='')
  display $display
  if $direction
    flex-direction $direction
  if $wrap
    flex-wrap $wrap
align($align = center, $justify = center)
  align-items $align
  justify-content $justify
no-wrap()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
border-1px($color,$pos=bottom)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    if $pos == bottom
      bottom: 0
    else if $pos == top
      top: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  border-1px()
    &::after
      -webkit-transform: scaleY(0.7)
      transform: scaleY(0.7)

@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  border-1px()
    &::after
      -webkit-transform: scaleY(0.5)
      transform: scaleY(0.5)

// 超出n行省略号
ellip($line=2)
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp $line
  -webkit-box-orient vertical
  white-space normal
.arrow
  width .1rem
  height .1rem
  border .01rem solid #666
  display block
  border-left-color transparent
  border-bottom-color transparent
  transform rotate(45deg)   

